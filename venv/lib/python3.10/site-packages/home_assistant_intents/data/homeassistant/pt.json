          "excludes_context": {
            "domain": [
              "cover"
            ]
          }
        },
        {
          "sentences": [
            "(está|estão) (algum|alguns) {on_off_domains:domain} {on_off_states:state} [<na_zona>]"
          ],
          "response": "any"
        },
        {
          "sentences": [
